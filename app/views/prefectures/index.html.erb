<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#pref-modal">
  ココを押すと表示
</button>

<h1></h1>
<h2></h2>

<div class="modal fade" id="pref-modal">
  <div class="modal-dialog" style="width:1250px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">エリアを選択</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <ul id="pref-list">
          <% @prefectures.each.with_index(1) do |(id, name), index| %>
            <li class="<%= "right" if index % 4 == 0 %>">
              <a class="pref" href="javascript:;" data-pref-id="<%= id %>" data-pref-name="<%= name %>"><%= name %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
  $('.pref').click(function() {
    var self = $(this);
    var pref_name = self.data('pref-name');
    var pref_id = self.data('pref-id');

    $('h1').text(pref_name)
    $('h2').text(pref_id)

    $('#pref-modal').modal('hide');
  })
})
</script>
